(defwidget bar []
    (box
      :orientation "h" 
      :space-evenly true
      :class "workspace"
      time
    )
    )


(defpoll time :interval "10s"
  "date '+%H:%M %b %d, %Y'")

(defwindow bar
  :monitor 0
  :windowtype "dock"
  :geometry (geometry :x "0%"
                      :y "0%"
                      :width "10%"
                      :height "10px"
                      :anchor "top right")
  :reserve (struts :side "top" :distance "4%")
  (bar)
  )
